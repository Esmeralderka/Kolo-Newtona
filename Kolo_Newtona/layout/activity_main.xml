<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teczowetlo"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/annie_use_your_telescope"
                android:foreground="@drawable/logo_aplikacji"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="#BE000000"
                android:textSize="70sp" />

            <Button
                android:id="@+id/button_start"
                android:layout_width="264dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/mclaren"
                android:foregroundGravity="top"
                android:gravity="center"
                android:scrollHorizontally="false"
                android:text="Start"
                android:textColor="#000000"
                android:textSize="55dp"
                app:backgroundTint="#27FFFFFF" />

            <Button
                android:id="@+id/button_opis"
                android:layout_width="264dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mclaren"
                android:text="Opis"
                android:textColor="#000000"
                android:textSize="55dp"
                app:backgroundTint="#27FFFFFF"
                app:iconTint="#000000" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Autor: Weronika Miksa 2020"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="                                                " />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:gravity="right"
            android:text="Ver 1.0"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>