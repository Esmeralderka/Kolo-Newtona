<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo_opisu"
    tools:context=".Opis">

    <Button
        android:id="@+id/button_start2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/mclaren"
        android:insetBottom="0dp"
        android:text="SprawdÅºmy to!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_wstecz2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:background="@drawable/strzalka_prosto"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#ADFFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/naglowek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/opis_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/opis_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/barwy" />

            <TextView
                android:id="@+id/opis_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/opis_text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mclaren"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/opis_text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mclaren" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>